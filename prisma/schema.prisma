generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id         String       @id  // unique ID provided by Clerk.
  workOrders WorkOrder[]  // Reverse relation to fetch all work orders for a user
}


model WorkOrder {
  id              Int           @id @default(autoincrement())
  userId          String
  workOrderNumber Int           @unique
  jobDate         DateTime
  client          String
  address         String?
  streetAddress   String?
  city            String?
  unitNumber      String?
  vin             String?
  licensePlate    String?
  hubometer       String?
  totalHours      Float
  descriptions    Description[]
  parts           Part[]
  user            User          @relation(fields: [userId], references: [id])  // Relation to User model
}

model Description {
  id          Int       @id @default(autoincrement())
  description String?
  time        Float?
  workOrderId Int
  workOrder   WorkOrder @relation(fields: [workOrderId], references: [id], onDelete: Cascade)
}

model Part {
  id          Int       @id @default(autoincrement())
  quantity    String?
  part        String?
  workOrderId Int
  workOrder   WorkOrder @relation(fields: [workOrderId], references: [id], onDelete: Cascade)
}
