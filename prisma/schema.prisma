generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model UserRoles {
  googleUserId String @id
  role         Role   @default(demo)

  @@map("user_roles")
}

enum Role {
  admin
  demo
}


model WorkOrder {
  id              Int           @id @default(autoincrement())
  workOrderNumber Int           @unique
  jobDate         DateTime
  client          String
  address         String?
  streetAddress   String?
  city            String?
  unitNumber      String?
  vin             String?
  licensePlate    String?
  hubometer       String?
  totalHours      Float
  descriptions    Description[]
  parts           Part[]
}

model Description {
  id          Int       @id @default(autoincrement())
  description String?
  time        Float?
  workOrderId Int
  workOrder   WorkOrder @relation(fields: [workOrderId], references: [id], onDelete: Cascade)
}

model Part {
  id          Int       @id @default(autoincrement())
  quantity    String?
  part        String?
  workOrderId Int
  workOrder   WorkOrder @relation(fields: [workOrderId], references: [id], onDelete: Cascade)
}
